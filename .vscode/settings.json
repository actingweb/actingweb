{
  // Markdown linting
  "markdownlint.config": {
    "MD013": false,
    "MD022": false,
    "MD026": false,
    "MD031": false,
    "MD032": false,
    "MD047": false
  },

  // Python configuration
  "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
  "python.envFile": "${workspaceFolder}/.env",

  // Pylance (type checking) configuration
  // Note: Type checking settings are configured in pyrightconfig.json
  // to avoid duplication and conflicts
  "python.languageServer": "Pylance",
  "python.analysis.diagnosticMode": "workspace",
  "python.analysis.autoImportCompletions": true,

  // Formatting
  "editor.formatOnSave": true,
  "python.formatting.provider": "none",
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.codeActionsOnSave": {
      "source.fixAll": "explicit",
      "source.organizeImports": "explicit"
    }
  },

  // Linting (using ruff)
  // Native LSP server is now default, no need for ruff.lint.run
  "ruff.enable": true,

  // Testing
  // Both unit tests and integration tests are discoverable.
  // Integration tests require DynamoDB running (docker-compose -f docker-compose.test.yml up -d)
  //
  // Running tests:
  // - Individual tests: Click the play button next to any test
  // - Unit tests only: poetry run pytest tests/ -m "not integration" --no-cov
  // - Integration tests only: poetry run pytest tests/ -m integration --no-cov
  // - All tests (may have ordering issues): Run All Tests button
  "python.testing.pytestEnabled": true,
  "python.testing.unittestEnabled": false,
  "python.testing.pytestArgs": [
    "tests",
    "--no-cov"
  ]
}
